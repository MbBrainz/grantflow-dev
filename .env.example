# =============================================================================
# GrantFlow Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/grantflow

# -----------------------------------------------------------------------------
# Authentication (Auth.js v5)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here

# GitHub OAuth (for GitHub sign-in)
# Create app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Resend (for Email OTP authentication)
# Get your API key at: https://resend.com
RESEND_API_KEY=re_your_api_key_here

# Email sender address (optional, defaults to noreply@grantflow.dev)
# Must be a verified domain in Resend
EMAIL_FROM=noreply@grantflow.dev

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# GitHub API (for repository queries)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# AI Services (Optional)
# -----------------------------------------------------------------------------
